<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ShopCuaToiActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/mauhong"
            app:title="Shop của tôi"
            app:titleTextColor="@color/mautrang" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:scrollbars="none">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mautrang"
                android:padding="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgHinhNV"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/logo" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/imgHinhNV"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtTenNV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đức Thuận"
                        android:textColor="@color/mauden" />

                    <TextView
                        android:id="@+id/txtEmailNV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="thuan7824@gmail.com"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/txtNgayDangKy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngày tham gia 24/03/2020"
                        android:textSize="12sp" />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/mautrang"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtQuanLyDonHang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mautrang"
                    android:drawableLeft="@drawable/ic_donmua_blue_24dp"
                    android:drawableRight="@drawable/ic_next_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Quản lý đơn hàng"
                    android:textColor="@color/mauden" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtDangSanPhamMoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/mautrang"
                android:drawableLeft="@drawable/ic_add_circle_outline_print_24dp"
                android:drawableRight="@drawable/ic_next_black_24dp"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Đăng sản phẩm mới"
                android:textColor="@color/mauden" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/mautrang"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:id="@+id/txtDoanhThu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_doanhthu_orange_24dp"
                    android:drawableRight="@drawable/ic_next_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Doanh thu"
                    android:textColor="@color/mauden" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/maunen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_star_border_blue_24dp"
                    android:drawableRight="@drawable/ic_next_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Xem đánh giá Shop"
                    android:textColor="@color/mauden" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/maunen" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_help_black_24dp"
                    android:drawableRight="@drawable/ic_next_black_24dp"
                    android:drawablePadding="10dp"
                    android:gravity="center|left"
                    android:text="Trung tâm trợ giúp"
                    android:textColor="@color/mauden" />

            </LinearLayout>

            <TextView
                android:id="@+id/txtXemShopCuaToi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/mautrang"
                android:drawableLeft="@drawable/ic_myshop_24dp"
                android:drawableRight="@drawable/ic_next_black_24dp"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Xem Shop của tôi"
                android:textColor="@color/mauden" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/mautrang"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtSoLuongSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="0 Sản phẩm"
                    android:textColor="@color/mauden"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/txtSoLuongSP"
                    android:text="(Sắp xếp theo mới nhất)"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/txtXemTatCaSPNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@drawable/ic_next_black_24dp"
                    android:gravity="center"
                    android:text="Xem tất cả"
                    android:textColor="@color/mauden"
                    android:textSize="10sp" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSanPham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txtXemTatCaSP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/ic_gift_box_print_24dp"
                android:drawablePadding="10dp"
                android:gravity="center|left"
                android:padding="10dp"
                android:text="Xem tất cả sản phẩm"
                android:textColor="@color/mauhong"/>


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>