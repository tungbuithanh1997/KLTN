<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llCVAlbumhot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/imgHinhSP"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/txtPhanTramKM"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_textview_giamgia"
                android:gravity="center"
                android:text="-49%"
                android:textColor="@color/mautrang"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:text="Ngay xuan long phung sum vay vui qua la vui"
            android:textColor="@color/mauden"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txtGiaSP"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxWidth="110dp"
            android:maxLines="1"
            android:text="200.000đ"
            android:textColor="@color/mauhong"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtGiaSPChuaKM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="300.000đ"
            android:textColor="@color/mauxam"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <ProgressBar
                    android:id="@+id/progressBarFlashSale"
                    android:layout_centerInParent="true"
                    android:progressDrawable="@drawable/custom_progressbar_flashsale"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/txtSoLuongSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxWidth="150dp"
                    android:text="ĐÃ BÁN 25"
                    android:textColor="@color/mautrang"
                    />
                <ImageView
                    android:id="@+id/imgFireFlashSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_fire_24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="invisible"/>

            </RelativeLayout>
            <Button
                android:id="@+id/btnMuaNgay"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/custom_border_button"
                android:text="Mua ngay"
                android:textAllCaps="false"
                android:layout_gravity=""
                android:textColor="@color/mautrang"
                android:layout_alignParentRight="true"/>
        </LinearLayout>





    </LinearLayout>


</LinearLayout>
