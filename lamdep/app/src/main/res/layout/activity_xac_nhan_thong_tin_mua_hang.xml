<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/maunen"
    tools:context=".Activity.XacNhanThongTinMuaHangActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mauhong"
        app:title="Xác nhận thông tin mua hàng"
        app:titleTextColor="@color/mautrang"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:elevation="5dp"
                android:layout_margin="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mautrang"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/imgViTri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vitri_print_24dp"
                        android:paddingRight="10dp"/>
                    <TextView
                        android:id="@+id/txtDiaChiNhanHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauhong"
                        android:text="Địa chỉ nhận hàng"
                        android:textSize="17sp"
                        android:layout_toRightOf="@id/imgViTri"
                        />

                    <LinearLayout
                        android:id="@+id/lnDiaChi"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_below="@id/txtDiaChiNhanHang"
                        android:layout_toRightOf="@id/imgViTri"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/txtTenNV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mauden"
                            android:text="Đức Thuận"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_height="13dp"
                            android:background="@color/mauden"/>

                        <TextView
                            android:id="@+id/txtSdt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mauden"
                            android:text="0973352845"
                            />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtDiaChi"
                        android:layout_width="wrap_content"
                        android:layout_below="@id/lnDiaChi"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauden"
                        android:text="Ký túc xá khu A Đại học quốc gia TPHCM, Quận thủ đức TPHCM"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:maxWidth="300dp"
                        android:layout_toRightOf="@id/imgViTri"
                        />
                    <ImageView
                        android:id="@+id/imgXemThemDiaChi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_xemtatca_right_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mautrang"
                    android:padding="10dp"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imgVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vanchuyen_print_24dp"
                        android:paddingRight="10dp"/>
                    <TextView
                        android:id="@+id/txtPTVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauhong"
                        android:text="Phương thức vận chuyển"
                        android:textSize="17sp"
                        android:layout_toRightOf="@id/imgVanChuyen"
                        />

                    <TextView
                        android:id="@+id/txtLoaiPTVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@id/txtPTVanChuyen"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauden"
                        android:text="Chuyển phát tiêu chuẩn (3 - 5 ngày)"
                        android:layout_toRightOf="@id/imgVanChuyen"
                        />


                    <ImageView
                        android:id="@+id/imgXemThemVanChuyen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_xemtatca_right_black_24dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mautrang"
                android:padding="10dp"
                android:elevation="5dp">

                <ImageView
                    android:id="@+id/imgThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_thanhtoan_print_24dp"
                    android:paddingRight="10dp"/>
                <TextView
                    android:id="@+id/txtPTThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mauhong"
                    android:text="Phương thức thanh toán"
                    android:textSize="17sp"
                    android:layout_toRightOf="@id/imgThanhToan"
                    />

                <TextView
                    android:id="@+id/txtLoaiPTThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/txtPTThanhToan"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mauden"
                    android:text="Thanh toán khi nhận hàng"
                    android:layout_toRightOf="@id/imgThanhToan"
                    />


                <ImageView
                    android:id="@+id/imgXemThemThanhToan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_xemtatca_right_black_24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>


            </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mautrang"
                    android:padding="10dp"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imgKhuyenMai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_thanhtoan_print_24dp"
                        android:paddingRight="10dp"/>
                    <TextView
                        android:id="@+id/txtMaKhuyenMai"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauhong"
                        android:text="Mã khuyến mãi"
                        android:textSize="17sp"
                        android:layout_toRightOf="@id/imgKhuyenMai"
                        />
                    <EditText
                        android:id="@+id/edMaGiamGia"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/custom_border"
                        android:layout_below="@id/txtMaKhuyenMai"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/mauden"
                        android:hint="Mã giảm giá/ mã hoàn tiền"/>






                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mautrang"
                    android:padding="10dp"
                    android:elevation="5dp">

                    <ImageView
                        android:id="@+id/imgDonHang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_thongtindonhang_print_24dp"
                        android:paddingRight="10dp"/>
                    <TextView
                        android:id="@+id/txtTTDH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mauhong"
                        android:text="Thông tin đơn hàng"
                        android:textSize="17sp"
                        android:layout_toRightOf="@id/imgDonHang"
                        />

                   <androidx.recyclerview.widget.RecyclerView
                       android:id="@+id/rvThongTinDonHang"
                       android:layout_width="match_parent"
                       android:layout_below="@id/imgDonHang"
                       android:layout_height="wrap_content"/>





                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </ScrollView>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mautrang">


        <TextView
            android:id="@+id/txtTextTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Tổng cộng:"
            android:textColor="@color/mauden"/>

        <TextView
            android:id="@+id/txtTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/mauhong"
            android:layout_toRightOf="@id/txtTextTongTien"
            android:layout_marginLeft="5dp"
            android:text="100.200.200đ"
            android:textSize="16sp"
            android:textStyle="bold"/>



        <Button
            android:id="@+id/btnThanhToan"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/custom_border_button"
            android:textColor="@color/mautrang"
            android:layout_marginRight="10dp"
            android:text="Thanh toán"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="12sp"
            android:layout_below="@id/txtTextTongTien"
            android:text="Đã bao gồm VAT (nếu có)"/>



    </RelativeLayout>

</LinearLayout>