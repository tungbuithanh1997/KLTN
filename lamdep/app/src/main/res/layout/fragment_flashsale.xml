<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/mautrang"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/relativeChuDeTheLoai"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtTitleBannerBaiHat"
            android:text="FLASH SALE"
            android:textSize="16sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="@color/mauhong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_flashsale_print_24dp"/>
        <TextView
            android:id="@+id/txtTimeGio"
            android:layout_toRightOf="@id/txtTitleBannerBaiHat"
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="18"
            android:paddingLeft="3dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:paddingRight="3dp"
            android:textColor="@color/mautrang"
            android:background="@drawable/custom_text_view_flashsale"/>
        <TextView
            android:id="@+id/txtTimePhut"
            android:layout_toRightOf="@id/txtTimeGio"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="12"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/mautrang"
            android:background="@drawable/custom_text_view_flashsale"/>
        <TextView
            android:id="@+id/txtTimeGiay"
            android:layout_toRightOf="@id/txtTimePhut"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:text="59"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/mautrang"
            android:background="@drawable/custom_text_view_flashsale"/>
        <TextView
            android:id="@+id/txtXemThemFlashSale"
            android:layout_alignParentRight="true"
            android:text="Xem tất cả"
            android:textColor="@color/mauden"
            android:gravity="center"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_next_black_24dp"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFlashSale"
        android:scrollbars="none"
        android:layout_below="@id/relativeChuDeTheLoai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



</RelativeLayout>