<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgHinhSP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"/>
    <TextView
        android:id="@+id/txtTenSP"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:layout_height="wrap_content"
        android:text="Bỉm em bé mát dịu cả ngày giúp thoải mái và không rò rỉ, đặc biệt êm ái"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/imgHinhSP"
        android:textColor="@color/mauden"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/txtPhanLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgHinhSP"
        android:layout_below="@id/txtTenSP"
        android:layout_marginLeft="10dp"
        android:textSize="10sp"
        android:text="Phân loại: Xanh coban, M"/>


    <TextView
        android:id="@+id/txtGiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/mauhong"
        android:layout_toRightOf="@id/imgHinhSP"
        android:layout_below="@id/txtPhanLoaiSP"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="300.000đ"/>
    <TextView
        android:id="@+id/txtGiaSPChuaKM"
        android:layout_toRightOf="@id/imgHinhSP"
        android:layout_marginLeft="10sp"
        android:textSize="12sp"
        android:layout_below="@id/txtGiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="420.000đ"/>

    <TextView
        android:id="@+id/txtKM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-58%"
        android:textSize="12sp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/mauden"
        android:layout_below="@id/txtGiaSP"
        android:layout_toRightOf="@id/txtGiaSPChuaKM"/>

    <TextView
        android:id="@+id/txtSL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x3"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtGiaSP"/>





</RelativeLayout>