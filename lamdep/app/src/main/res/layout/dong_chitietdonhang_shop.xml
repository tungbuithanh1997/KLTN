<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgHinhSP"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_marginRight="10dp"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/txtTenSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/imgHinhSP"
        android:textColor="@color/mauden"
        android:text="Bộ võng xếp thoải mái mát mẻ mang đến cho bé cảm giác"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/txtPhanLoaiSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:layout_below="@+id/txtTenSP"
        android:layout_toRightOf="@id/imgHinhSP"
        android:text="Đen, XL"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/txtGiaSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_toRightOf="@id/imgHinhSP"
        android:layout_below="@id/txtPhanLoaiSP"
        android:layout_marginTop="10dp"
        android:textColor="@color/mauhong"
        android:text="469.000đ"/>
    <TextView
        android:id="@+id/txtSoLuongSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x 2"
        android:textSize="16sp"
        android:textColor="@color/mauden"
        android:layout_toRightOf="@id/txtGiaSP"
        android:layout_below="@id/txtPhanLoaiSP"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"/>




</RelativeLayout>