<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/frameLayoutTheLoaiTheoChuDe"
            android:layout_width="150dp"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/imgHinhSP"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/noimage"
                />
            <TextView
                android:id="@+id/txtPhanTramGiamGia"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="-49%"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/mautrang"
                android:layout_alignParentRight="true"
                android:background="@drawable/custom_textview_giamgia"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/txtTenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/mauden"
            android:textSize="16sp"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:ellipsize="end"
            android:text="Ao nu de thuong cho ban nu mua he nang dong"
            />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/txtGiaSP"
                android:lines="1"
                android:text="325.000đ"
                android:maxWidth="80dp"
                android:textSize="16sp"
                android:textColor="@color/mauhong"
                android:ellipsize="end"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/txtDaBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán 120"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textSize="12sp"
                android:layout_marginRight="5dp"/>
        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>