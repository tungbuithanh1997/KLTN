<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="3dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/llCVAlbumhot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgHinhSanPhamGoiY"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/txtTenSanPhamGoiY"
            android:textSize="15sp"
            android:lines="2"
            android:ellipsize="end"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:text="Ngay xuan long phung sum vay vui qua la vui"
            android:textColor="@color/mauden"
            android:maxWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/txtGiaSanPhamGoiY"
                android:text="10.000.00"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="110dp"
                android:textColor="@color/mauhong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:id="@+id/txtLuotMuaSanPhamGoiY"
                android:text="Đã bán 500"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:maxWidth="90dp"
                android:paddingRight="5dp"
                android:textColor="@color/mauden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>